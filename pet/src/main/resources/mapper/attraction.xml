<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.pet.model.mapper.AttractionMapper">
	<select id="searchAttractions" parameterType="map" resultType="AttractionsDto">
		select *
		from attractions
		<where>
			<if test="sidoCode != null and sidoCode != ''">
				sido_code = #{sidoCode}
			</if>
			<if test="gugunCode != null and gugunCode != ''">
				and gugun_code = #{gugunCode}
			</if>
			<if test="contentTypeId != null and contentTypeId !=''">
				and content_type_id = #{contentTypeId}
			</if>
			<if test="title != null and title != ''" >
				and title like concat('%', #{title}, '%')
			</if>
		</where>
	</select>
	
	<select id="searchByContentID" parameterType="int" resultType="AttractionsDto">
		select * from attractions
		where content_id = #{content_id}
	</select>
	
	<select id="searchPetByContentID" parameterType="int" resultType="PetAttractionsDto">
		select * 
		from pet_attractions 
		where content_id=#{content_id}
	</select>
	
	<select id="searchDetailByKeyword" parameterType="String" resultType="int">
		select content_id
		from pet_attractions
		where acmpyPsblCpam = #{keyword}
	</select>
	
</mapper>
